@model IEnumerable<CoraetionTask.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="row mt-5">
    <div class="col-md-7 mx-auto">
        <table class="table table-responsive table-bordered table-hover table-striped" style="overflow-x:scroll" id="productTable">
            <thead class="text-light" style="background-color: #34495e;">
                <tr style="text-align:center">
                    <th style="text-align:center">@Html.DisplayNameFor(product=>product.Name)</th>
                    <th style="text-align:center">@Html.DisplayNameFor(product=>product.Price)</th>
                    <th style="text-align:center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var product in Model)
                    {
                        <tr style="text-align:center">
                            <td class="align-middle">
                                @product.Name
                            </td>
                            <td class="align-middle">
                                @product.Price
                            </td>
                            <td class="align-middle">
                                <a style="background-color:#0a3d62" class="btn text-light" asp-action="Edit" asp-route-id="@product.ID">Edit</a> |
                                <a style="background-color:#4a69bd" class="btn text-light" asp-action="Details" asp-route-id="@product.ID">Details</a> |
                                <a class="btn btn-danger text-light" asp-action="Delete" asp-route-id="@product.ID">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td style="color:red;text-align:center" colspan="4">Product Table Is Empty Please Check Your Database.</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>


<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#productTable').DataTable();
    });
</script>

<div style="position:fixed;right:25px;bottom:80px" class="text-white">
    <a asp-action="Create" asp-controller="Product" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>
