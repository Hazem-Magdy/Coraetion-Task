@model CoraetionTask.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<header>
    <link rel="stylesheet" href="~/css/ProductDelete.css" asp-append-version="true" />
</header>
<div class="container2">
    <h3>Are you sure you want to delete this?</h3>

    <div>
        <h4>Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
        <div class="form-group">
            <form asp-action="Delete" class="d-flex justify-content-evenly">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Confirm" class="btn btn-danger " />
                <a class="btn btn-success" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>

