@model CoraetionTask.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
    int counter = 0;
}

<h1 class="text-center">Details</h1>

<div class="col-6 mx-auto shadow-sm p-3 rounded-2 " style="border:1px solid lightgrey">
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mobile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mobile)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-responsive table-striped table-bordered table-hover table-sm">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                    </tr>
                </thead>
                @if (Model.Products.Count() >0)
                {
                    <tbody>
                        @foreach (Product product in Model.Products)
                        {
                            <tr>
                                <td>@(counter += 1)</td>
                                <td>@product.Name</td>
                                <td>@product.Price</td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <tbody>
                        <tr>
                            <td style="color:red;text-align:center" colspan="3">Customer Products Are Empty.</td>
                        </tr>
                    </tbody>
                }
            </table>

        </dd>
    </dl>
    <div class="col-6 mx-auto text-center mt-3">
        <a class="btn btn-primary px-4" asp-action="Edit" asp-route-id="@Model?.ID">Edit</a>
        <a class="btn btn-success" asp-action="Index">Back to List</a>
    </div>
</div>

