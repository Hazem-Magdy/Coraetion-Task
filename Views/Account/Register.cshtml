@model RegisterationViewModel

@{
    ViewData["Title"] = "User Registration";
}

<style>

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid #e5e5e;
        border-radius: 5px;
        background-color: #f7f7f7;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #34495e;
        }

        .form-group input[type="password"],
        .form-group input[type="text"],
        .form-group input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

    .text-danger {
        font-size: 12px;
        color: red;
    }

    .btn-primary {
        display: block;
        width: 50%;
        margin:0 auto;
        padding: 10px;
        background-color: #34495e;
        border: none;
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #2c3e50;
        }
</style>

<div class="container">
    <div class="form-container shadow-sm " style="border:1px solid lightgrey">
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="d-flex justify-content-center">
                <div class="form-group col-6 me-2">
                    <label asp-for="FullName">FullName</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="Mobile">Mobile</label>
                    <input asp-for="Mobile" class="form-control" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group col-6 me-2">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group col-6 me-2">
                <label  asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

                <div class="form-group col-6">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
